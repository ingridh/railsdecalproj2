<head>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
</head>
<body>
	<div id = "infocontain">
	<h3>Hi there <b><%= @user.name if @user.name %></h3></b>

	<ul><p><b>YOUR EMAIL:</b> <%= @user.email if @user.email %></p></ul>
  	<br><br>


	<h4>Your Events:<h4>


	<h5>Events You're Going To:</h5>

  <br>
  <button type="button" class="btn btn-default btn-lg">Create Your Own Event!</button>
<!--   <%= button_to "Create Our Own Event", create_event(event: @event, :method => :post)%>
 -->
  <button type="button" class="btn btn-default btn-lg"><%= link_to 'Explore More Events!', events_index_path %></button></div>

	<h5>Create your own event</h5>
  <%= simple_form_for @user do |f| %>
  <%= f.input :title, label: 'Event Name', required: true  %>
  <%= f.input :description, as: :text, label: 'Description' %>
  <%= f.input :location, label: 'Location' %>
  <%= f.input :time, label: 'Time' %>
  <%= f.input :date, as: :date, year: Date.today.year - 90, end_year: Date.today.year - 12, discard_day: true, order: [:month, :year] %>
  <%= f.button :submit %>
  <% end %>
  <button type="button" class="btn btn-default btn-lg"><%= link_to 'Create your own event', events_create_path %></button></div>

	</div>
</body>


  <style type="text/css">
      body {
      	left: 0;
      	font-family: "Roboto Slab","Helvetica Neue",Helvetica,Arial,sans-serif;"

      }
      #infocontain{
      	margin-left: 60px;
      	padding-top: 20px;
      }

  </style>