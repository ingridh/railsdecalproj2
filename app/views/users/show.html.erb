<body>
	<div id = "infocontain">
	<h3>Hi there, <b><%= @user.name if @user.name %></h3></b>

	<ul><p><b>YOUR EMAIL:</b> <%= @user.email if @user.email %></p></ul>
  	<br><br>


	<h4>Your Events:<h4>


	<h5>Events You're Going To:</h5>

  <br>
  <button type="button" class="btn btn-default btn-lg"><%= link_to 'Explore More Events!', events_path %></button>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Create Your Own Event!
</button>

<!--   <button type="button" class="btn btn-default btn-lg"><%= link_to 'Create Your Own Event!', new_event_path %></button> -->

<!-- Modal -->
 <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Create Event</h4>
      </div>
      <div class="modal-body">
        
    <%=render :template => "/events/new"%>
<!-- 
    <%= simple_form_for Event.new, url: { action: 'create' } do |f| %>
    <%= f.input :title, label: 'Event Name', required: true, input_html: {maxlength: 30}  %>
    <%= f.input :datetime, as: :datetime, required: true %><br><br>
    <%= f.input :location, label: 'Location', required: true, input_html: {maxlength: 30} %>
    <%= f.input :description, as: :text, label: 'Description', required: true %>
    <%= f.button :submit%>
 -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>

        <%= f.button :submit%>


      </div>
    </div>
  </div>
</div> 




  <% end %>


	</div>
